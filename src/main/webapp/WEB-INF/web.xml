<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
    <filter-name>jdbcFilter</filter-name>
    <filter-class>controller.filter.JdbcFilter</filter-class>
    <init-param>
      <param-name>jdbc.url</param-name>
      <param-value>jdbc:mysql://localhost/crud_jsp_jdbc_demo</param-value>
    </init-param>
    <init-param>
      <param-name>jdbc.user</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>jdbc.password</param-name>
      <param-value>MySQL</param-value>
    </init-param>
    <init-param>
      <param-name>jdbc.driver.mysql</param-name>
      <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>cookieFilter</filter-name>
    <filter-class>controller.filter.CookieFilter</filter-class>
  </filter>
  <filter>
    <filter-name>encodingFilterFilter</filter-name>
    <filter-class>controller.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>jdbcFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>cookieFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encodingFilterFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>homeServlet</servlet-name>
    <servlet-class>controller.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>controller.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logoutServlet</servlet-name>
    <servlet-class>controller.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userInfoServlet</servlet-name>
    <servlet-class>controller.servlet.UserInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>productListServlet</servlet-name>
    <servlet-class>controller.servlet.ProductListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>createProductServlet</servlet-name>
    <servlet-class>controller.servlet.CreateProductServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>deleteProductServlet</servlet-name>
    <servlet-class>controller.servlet.DeleteProductServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>editProductServlet</servlet-name>
    <servlet-class>controller.servlet.EditProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>homeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userInfoServlet</servlet-name>
    <url-pattern>/userInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>productListServlet</servlet-name>
    <url-pattern>/productList</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>createProductServlet</servlet-name>
    <url-pattern>/createProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>deleteProductServlet</servlet-name>
    <url-pattern>/deleteProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>editProductServlet</servlet-name>
    <url-pattern>/editProduct</url-pattern>
  </servlet-mapping>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/view/errorView.jsp</location>
  </error-page>

  <welcome-file-list>
    <welcome-file>home</welcome-file>
  </welcome-file-list>

</web-app>
